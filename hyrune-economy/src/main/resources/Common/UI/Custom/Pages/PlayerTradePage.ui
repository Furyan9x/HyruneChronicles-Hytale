$C = "../Common.ui";

@TradeTitleStyle = LabelStyle(FontSize: 20, TextColor: #f2d38a, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center);
@SectionHeader = LabelStyle(FontSize: 12, TextColor: #f2d38a, RenderUppercase: true, RenderBold: true, VerticalAlignment: Center);
@BodyText = LabelStyle(FontSize: 12, TextColor: #d9e6f3, VerticalAlignment: Center);
@TradeSlotBackground = PatchStyle(Color: #10293c(0.92), Border: 2);

$C.@DecoratedContainer {
  Anchor: (Width: 1080, Height: 810);

  Group #Title {
    Anchor: (Top: 0, Left: 0, Right: 0, Height: 52);

    Label #TradeTitle {
      Text: "TRADING WITH: PLAYER";
      Style: @TradeTitleStyle;
      Anchor: (Left: 18, Right: 46, Height: 32, Top: 6);
    }

    TextButton #TradeClose {
      Anchor: (Right: 6, Top: 8, Width: 24, Height: 24);
      Text: "X";
      Style: $C.@HeaderTextButtonStyle;
    }
  }

  Group #Content {
    LayoutMode: Top;
    Anchor: (Top: 54, Left: 14, Right: 14, Bottom: 14);

    Group {
      LayoutMode: Left;
      Anchor: (Height: 330, Left: 0, Right: 0);

      Group #SelfOfferPanel {
        LayoutMode: Top;
        Anchor: (Width: 430, Height: 330);
        Background: #071b2a(0.88);
        Padding: (Top: 10, Left: 10, Right: 10, Bottom: 10);

        Group {
          LayoutMode: Left;
          Anchor: (Height: 18, Left: 0, Right: 0);
          Label { Text: "Your Offer"; Style: @SectionHeader; Anchor: (Height: 18); }
          Group { FlexWeight: 1; }
          Label #SelfOfferAccepted {
            Text: "Accepted";
            Style: (FontSize: 11, TextColor: #8df2a5, RenderBold: true, RenderUppercase: true, VerticalAlignment: Center);
            Anchor: (Height: 18);
            Visible: false;
          }
        }

        Group { Anchor: (Height: 8); }

        ItemGrid #SelfOfferGrid {
          FlexWeight: 1;
          Anchor: (Left: 0, Right: 0);
          SlotsPerRow: 5;
          ShowScrollbar: true;
          KeepScrollPosition: true;
          AreItemsDraggable: false;
          DisplayItemQuantity: true;
          RenderItemQualityBackground: true;
          Style: (
            SlotBackground: @TradeSlotBackground,
            SlotSize: 72,
            SlotIconSize: 62
          );
        }
      }

      Group { FlexWeight: 1; }

      Group #TradeCenterPanel {
        LayoutMode: Top;
        Anchor: (Width: 190, Height: 330);
        Background: #0b2234(0.86);
        Padding: (Top: 10, Left: 12, Right: 12, Bottom: 10);

        Label #TradeStateLabel {
          Text: "Select items and click Accept.";
          Style: ( ...@BodyText, HorizontalAlignment: Center, Wrap: true );
          Anchor: (Height: 54, Left: 0, Right: 0);
        }

        Group { Anchor: (Height: 8); }

        TextButton #TradeAccept {
          Anchor: (Left: 0, Right: 0, Height: 34);
          Text: "Accept";
          Style: $C.@DefaultTextButtonStyle;
        }

        Group { Anchor: (Height: 8); }

        TextButton #TradeDecline {
          Anchor: (Left: 0, Right: 0, Height: 34);
          Text: "Decline";
          Style: $C.@DefaultTextButtonStyle;
        }
      }

      Group { FlexWeight: 1; }

      Group #OtherOfferPanel {
        LayoutMode: Top;
        Anchor: (Width: 430, Height: 330);
        Background: #071b2a(0.88);
        Padding: (Top: 10, Left: 10, Right: 10, Bottom: 10);

        Group {
          LayoutMode: Left;
          Anchor: (Height: 18, Left: 0, Right: 0);
          Label { Text: "Trader Offer"; Style: @SectionHeader; Anchor: (Height: 18); }
          Group { FlexWeight: 1; }
          Label #OtherOfferAccepted {
            Text: "Accepted";
            Style: (FontSize: 11, TextColor: #8df2a5, RenderBold: true, RenderUppercase: true, VerticalAlignment: Center);
            Anchor: (Height: 18);
            Visible: false;
          }
        }

        Group { Anchor: (Height: 8); }

        ItemGrid #OtherOfferGrid {
          FlexWeight: 1;
          Anchor: (Left: 0, Right: 0);
          SlotsPerRow: 5;
          ShowScrollbar: true;
          KeepScrollPosition: true;
          AreItemsDraggable: false;
          DisplayItemQuantity: true;
          RenderItemQualityBackground: true;
          Style: (
            SlotBackground: @TradeSlotBackground,
            SlotSize: 72,
            SlotIconSize: 62
          );
        }
      }
    }

    Group { Anchor: (Height: 10); }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;
      Background: #071a28(0.64);
      Padding: (Top: 8, Left: 8, Right: 8, Bottom: 8);

      Label { Text: "Inventory"; Style: @SectionHeader; Anchor: (Height: 18, Left: 0, Right: 0); }
      Group { Anchor: (Height: 6); }

      Label { Text: "Backpack"; Style: @SectionHeader; Anchor: (Height: 16, Left: 0, Right: 0); }
      ItemGrid #BackpackGrid {
        Anchor: (Height: 120, Left: 0, Right: 0);
        SlotsPerRow: 9;
        ShowScrollbar: true;
        KeepScrollPosition: true;
        AreItemsDraggable: false;
        DisplayItemQuantity: true;
        RenderItemQualityBackground: true;
        Style: (
          SlotBackground: @TradeSlotBackground,
          SlotSize: 56,
          SlotIconSize: 46
        );
      }

      Group { Anchor: (Height: 6); }

      Label { Text: "Storage"; Style: @SectionHeader; Anchor: (Height: 16, Left: 0, Right: 0); }
      ItemGrid #StorageGrid {
        Anchor: (Height: 120, Left: 0, Right: 0);
        SlotsPerRow: 9;
        ShowScrollbar: true;
        KeepScrollPosition: true;
        AreItemsDraggable: false;
        DisplayItemQuantity: true;
        RenderItemQualityBackground: true;
        Style: (
          SlotBackground: @TradeSlotBackground,
          SlotSize: 56,
          SlotIconSize: 46
        );
      }

      Group { Anchor: (Height: 6); }

      Label { Text: "Hotbar"; Style: @SectionHeader; Anchor: (Height: 16, Left: 0, Right: 0); }
      ItemGrid #HotbarGrid {
        Anchor: (Height: 78, Left: 0, Right: 0);
        SlotsPerRow: 9;
        ShowScrollbar: true;
        KeepScrollPosition: true;
        AreItemsDraggable: false;
        DisplayItemQuantity: true;
        RenderItemQualityBackground: true;
        Style: (
          SlotBackground: @TradeSlotBackground,
          SlotSize: 56,
          SlotIconSize: 46
        );
      }
    }
  }
}
