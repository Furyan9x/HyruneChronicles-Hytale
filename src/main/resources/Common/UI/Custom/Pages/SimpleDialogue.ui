      Anchor: (Height: 26);
      LayoutMode: Left;
      Visible: false;
      Background: #000000(0.25);
      Padding: (Left: 8, Right: 8);

      Label #Option4Number {
        Text: "5.";
        Style: @OptionNumberStyle;
        Anchor: (Width: 20);
      }

