        Anchor: (Width: 20);
      }

      Label #Option2Text {
        Text: "Option 2";
        Style: @OptionTextStyle;
        FlexWeight: 1;
      }
    }

    Group { Anchor: (Height: 4); }

    // Option 3
    Button #Option3 {
      Anchor: (Height: 26);
      LayoutMode: Left;
      Visible: false;
      Background: #000000(0.25);
      Padding: (Left: 8, Right: 8);

      Label #Option3Number {
