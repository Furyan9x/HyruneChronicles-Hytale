$C = "../Common.ui";

@SkillCellButtonStyle = ButtonStyle(
  Default: (Background: (TexturePath: "Images/skill_cell_bg.png")),
  Hovered: (Background: (TexturePath: "Images/skill_cell_bg_hover.png")),
  Pressed: (Background: (TexturePath: "Images/skill_cell_bg_pressed.png")),
  Disabled: ()
);

// A single cell in the grid
Button #SkillRoot {
    Anchor: (Height: 54);
    LayoutMode: Top;
    Style: @SkillCellButtonStyle;

    Group #SkillCellBody {
        Anchor: (Height: 48);
        LayoutMode: Left; // This means "Stack children Left-to-Right" (Horizontal)
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);


        // Icon Placeholder
        Group #IconBox {
            Anchor: (Width: 30, Height: 30);
            Background: "attack.png";
            Padding: (Right: 6);

            Label #IconText {
                Text: "?";
                Style: (FontSize: 14, TextColor: #ffffff, VerticalAlignment: Center, HorizontalAlignment: Center);
            }
        }

        Group { Anchor: (Width: 4); }

        // Skill Info Group
        Group {
            LayoutMode: Top;
            FlexWeight: 1;

            Label #SkillName {
                Text: "Skill";
                Style: (FontSize: 11, TextColor: #ffcc00);
            }

            Label #SkillLevel {
                Text: "1 / 99";
                Style: (FontSize: 11, TextColor: #ffffff);
            }

            Group { Anchor: (Height: 3); }

            Group {
                Anchor: (Height: 4);

                Group #ProgressTrack {
                    Anchor: (Width: 98, Height: 5, Left: -1);
                    LayoutMode: Left;
                    Background: #000000(0.65);

                    // The "Fill" (Foreground)
                    // We give it an ID so we can resize it in Java
                    Group #ProgressFill {
                        Anchor: (Width: 0, Height: 4); // Start at 0 width
                        Background: #00FF00; // Bright Green (or Gold)
                    }
                }
            }
        }
    }

    Group { Anchor: (Height: 6); }
}
