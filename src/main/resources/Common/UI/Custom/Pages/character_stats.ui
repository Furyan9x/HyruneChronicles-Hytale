// A single cell in the grid
Button #SkillRoot {
    Anchor: (Height: 40);
    LayoutMode: Left; // This means "Stack children Left-to-Right" (Horizontal)
    Padding: (Full: 4);
    Background: #000000(0.2);

    // Icon Placeholder
    Group #IconBox {
        Anchor: (Width: 32, Height: 32);
        Background: #333333;
        Padding: (Right: 8);

        Label #IconText {
            Text: "?";
            Style: (FontSize: 14, TextColor: #ffffff, VerticalAlignment: Center, HorizontalAlignment: Center);
        }
    }

    // Skill Info Group
    Group {
        LayoutMode: Top; // FIXED: "Top" means "Stack children Top-to-Bottom" (Vertical)
        FlexWeight: 1;

        Label #SkillName {
            Text: "Skill";
            Style: (FontSize: 12, TextColor: #ffcc00);
        }

        Label #SkillLevel {
            Text: "1 / 99";
            Style: (FontSize: 12, TextColor: #ffffff);
        }
    }
}