$C = "../Common.ui";

@TitleText = LabelStyle(FontSize: 22, TextColor: #f7f1d5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
@SubtitleText = LabelStyle(FontSize: 12, TextColor: #b7cad9, HorizontalAlignment: Center, VerticalAlignment: Center);
@HeaderButton = LabelStyle(FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);

$C.@DecoratedContainer {
  Anchor: (Width: 940, Height: 640);

  Group #Title {
    Anchor: (Top: 0, Left: 0, Right: 0, Height: 58);
    Background: #0a2234(0.85);

    Label #ProfilerTitle {
      Text: "NPC";
      Style: @TitleText;
      Anchor: (Left: 70, Right: 70, Top: 4, Height: 28);
    }

    Label #ProfilerSubtitle {
      Text: "NPC Profiler";
      Style: @SubtitleText;
      Anchor: (Left: 70, Right: 70, Top: 32, Height: 16);
    }

    TextButton #ProfilerRefresh {
      Anchor: (Left: 8, Top: 12, Width: 64, Height: 28);
      Text: "R";
      Style: $C.@HeaderTextButtonStyle;
    }

    TextButton #ProfilerClose {
      Anchor: (Right: 8, Top: 12, Width: 64, Height: 28);
      Text: "X";
      Style: $C.@HeaderTextButtonStyle;
    }
  }

  Group #Content {
    LayoutMode: Top;
    Anchor: (Top: 60, Left: 14, Right: 14, Bottom: 12);
    Background: #04131d(0.72);
    Padding: (Top: 8, Left: 8, Right: 8, Bottom: 8);

    Group #StatsScroll {
      LayoutMode: TopScrolling;
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Padding: (Right: 20);

      Group #StatsList {
        LayoutMode: Top;
        Anchor: (Left: 0, Right: 0);
      }
    }
  }
}
