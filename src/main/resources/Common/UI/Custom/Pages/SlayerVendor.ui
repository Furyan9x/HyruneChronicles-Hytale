$C = "../Common.ui";

@TitleStyle = LabelStyle(FontSize: 18, TextColor: #f2d38a, RenderBold: true);
@TitleCenterStyle = LabelStyle(...@TitleStyle, HorizontalAlignment: Center, VerticalAlignment: Center);
@BodyStyle = LabelStyle(FontSize: 13, TextColor: #f7e9cd);
@BodyCenterStyle = LabelStyle(...@BodyStyle, HorizontalAlignment: Center, VerticalAlignment: Center);

