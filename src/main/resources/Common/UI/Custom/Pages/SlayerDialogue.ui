$C = "../Common.ui";

@NpcNameStyle = LabelStyle(FontSize: 15, TextColor: #f2d38a, RenderBold: true);
@DialogueStyle = LabelStyle(FontSize: 13, TextColor: #f7e9cd);
@OptionStyle = LabelStyle(FontSize: 13, TextColor: #ffe6b3, RenderBold: false);

$C.@PageOverlay {
  Group #DialogueRoot {
    Anchor: (Width: 504, Height: 260, Bottom: 40);
    LayoutMode: Top;
    Padding: (Top: 10, Left: 12, Right: 12, Bottom: 10);
    Background: #2b1b12(0.9);

    Label #NpcName {
      Text: "Slayer Master";
      Anchor: (Height: 18);
      Style: @NpcNameStyle;
    }

    Group { Anchor: (Height: 4); }

    Label #DialogueText {
      Text: "Greetings.";
      Anchor: (Height: 70);
      Style: @DialogueStyle;
    }

    Group { Anchor: (Height: 6); }

    Group #Options {
      LayoutMode: Top;

      TextButton #OptionTurnIn {
        Text: "I have completed my task.";
        Anchor: (Height: 20);
        Background: #000000(0.25);
      }
      Group { Anchor: (Height: 4); }

      TextButton #OptionExplain {
        Text: "What is the Slayer skill?";
        Anchor: (Height: 20);
        Background: #000000(0.25);
      }
      Group { Anchor: (Height: 4); }

      TextButton #OptionRequest {
        Text: "Give me a Slayer task.";
        Anchor: (Height: 20);
        Background: #000000(0.25);
      }
      Group { Anchor: (Height: 4); }

      TextButton #OptionShop {
        Text: "View Slayer shop.";
        Anchor: (Height: 20);
        Background: #000000(0.25);
      }
      Group { Anchor: (Height: 4); }

      TextButton #OptionBack {
        Text: "Back.";
        Anchor: (Height: 20);
        Background: #000000(0.25);
      }
      Group { Anchor: (Height: 4); }

      TextButton #OptionThanks {
        Text: "Understood.";
        Anchor: (Height: 20);
        Background: #000000(0.25);
      }
      Group { Anchor: (Height: 4); }

      TextButton #OptionNevermind {
        Text: "Nevermind.";
        Anchor: (Height: 20);
        Background: #000000(0.25);
      }
    }
  }
}
